{
  "compilerOptions": {
     "lib": [
        "es6"
     ],
     "target": "es6",
     "module": "es2015",
     "moduleResolution": "node",
     "isolatedModules": true,
     "outDir": "dist",
     "resolveJsonModule": true,
     "emitDecoratorMetadata": true,
     "esModuleInterop": true,
     "experimentalDecorators": true,
     "sourceMap": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}